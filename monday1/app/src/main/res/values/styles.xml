<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom button styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button.Cancel" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Button.Save" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/main_brown</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources> 