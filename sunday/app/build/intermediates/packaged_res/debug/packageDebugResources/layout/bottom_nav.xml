<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/nav_record"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView android:id="@+id/imgRecord"
            android:src="@drawable/nav_no_report"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:id="@+id/txtRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView android:id="@+id/imgHome"
            android:src="@drawable/nav_home"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:id="@+id/txtHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            android:textSize="12sp"
            android:textColor="#B03E2C"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_rcmd"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView android:id="@+id/imgRcmd"
            android:src="@drawable/nav_no_rcmd"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:id="@+id/txtRcmd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음료 추천"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_my"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView android:id="@+id/imgMy"
            android:src="@drawable/nav_no_my"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:id="@+id/txtMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>
</LinearLayout>
